<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Text">
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="Text.Vcard">
		<!-- empty parent -->
	</style>

	<style name="Text.Vcard.Nick">
		<item name="android:textSize">46dp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Text.Vcard.Name">
		<item name="android:textSize">32dp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Text.Vcard.Position">
		<item name="android:textSize">14dp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">@color/grey</item>
	</style>

	<style name="Text.Contact">
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:textStyle">normal</item>
		<item name="android:singleLine">true</item>
	</style>

	<style name="Text.Contact.Value">
		<item name="android:textSize">10dp</item>
		<item name="android:textColor">@color/grey</item>
	</style>

	<style name="Text.Contact.Label">
		<item name="android:textSize">34dp</item>
	</style>

	<style name="Text.Network">
		<!-- empty parent -->
	</style>

	<style name="Text.Network.Label">
		<item name="android:textSize">18dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="Text.Network.Description">
		<item name="android:textSize">14dp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">#FF999999</item>
	</style>

	<style name="Icon">
		<!-- empty parent -->
	</style>

	<style name="Icon.Network">
		<item name="android:layout_width">48dp</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_marginTop">8dp</item>
		<item name="android:layout_marginRight">16dp</item>
		<item name="android:layout_marginBottom">8dp</item>
		<item name="android:layout_marginLeft">8dp</item>
	</style>
</resources>