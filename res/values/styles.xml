<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Text">
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="Text.Vcard">
		<!-- empty parent -->
	</style>

	<style name="Text.Vcard.Nick">
		<item name="android:textSize">46sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Text.Vcard.Name">
		<item name="android:textSize">32sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Text.Vcard.Position">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">@color/grey</item>
	</style>

	<style name="Text.Contact">
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:textStyle">normal</item>
		<item name="android:singleLine">true</item>
	</style>

	<style name="Text.Contact.Value">
		<item name="android:textSize">10sp</item>
		<item name="android:textColor">@color/grey</item>
	</style>

	<style name="Text.Contact.Label">
		<item name="android:textSize">34sp</item>
	</style>

	<style name="Text.Network">
		<!-- empty parent -->
	</style>

	<style name="Text.Network.Label">
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:shadowColor">@android:color/white</item>
		<item name="android:shadowRadius">2.0</item>
		<item name="android:shadowDx">0.0</item>
		<item name="android:shadowDy">2.0</item>
	</style>

	<style name="Text.Network.Description">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">#FF444444</item>
		<item name="android:shadowColor">#AAFFFFFF</item>
		<item name="android:shadowRadius">1.0</item>
		<item name="android:shadowDx">0.0</item>
		<item name="android:shadowDy">2.0</item>
	</style>

	<style name="Icon">
		<!-- empty parent -->
	</style>

	<style name="Icon.Network">
		<item name="android:layout_width">48dp</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_marginTop">8dp</item>
		<item name="android:layout_marginRight">16dp</item>
		<item name="android:layout_marginBottom">8dp</item>
		<item name="android:layout_marginLeft">8dp</item>
	</style>

	<style name="Timeline">
		<!-- empty parent -->
	</style>

	<style name="Timeline.Event">
		<!-- empty parent -->
	</style>

	<style name="Timeline.Event.Date">
		<item name="android:gravity">center</item>
		<item name="android:textSize">14dp</item>
		<item name="android:textColor">#FF444444</item>
		<item name="android:shadowColor">#AAFFFFFF</item>
		<item name="android:shadowRadius">1.0</item>
		<item name="android:shadowDx">0.0</item>
		<item name="android:shadowDy">2.0</item>
	</style>

	<style name="Timeline.Event.Title">
		<item name="android:textSize">22sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@android:color/black</item>
	</style>

	<style name="Timeline.Event.Description">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@android:color/black</item>
	</style>

	<style name="Timeline.Event.Client">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/grey</item>
	</style>
</resources>