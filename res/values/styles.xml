<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Text">
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="Text.Vcard">
		<!-- empty parent -->
	</style>

	<style name="Text.Vcard.Nick">
		<item name="android:textSize">44dp</item>
	</style>

	<style name="Text.Vcard.Name">
		<item name="android:textSize">32dp</item>
	</style>

	<style name="Text.Vcard.Position">
		<item name="android:textSize">18dp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">@color/grey</item>
	</style>

	<style name="Text.Contact">
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:textStyle">normal</item>
		<item name="android:singleLine">true</item>
	</style>

	<style name="Text.Contact.Value">
		<item name="android:textSize">12dp</item>
		<item name="android:textColor">@color/grey</item>
	</style>

	<style name="Text.Contact.Label">
		<item name="android:textSize">34sp</item>
	</style>

	<style name="Text.Vertical">
		<item name="android:textSize">36dp</item>
		<item name="android:textColor">@color/grey</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">marquee</item>
	</style>

	<style name="Text.Vertical.Sub">
		<item name="android:textSize">16dp</item>
	</style>

	<style name="Text.Network">
		<!-- empty parent -->
	</style>

	<style name="Text.Network.TitleOn">
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:textSize">32dp</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:shadowColor">#AAFFFFFF</item>
		<item name="android:shadowRadius">2.0</item>
		<item name="android:shadowDx">0.0</item>
		<item name="android:shadowDy">1.0</item>
	</style>

	<style name="Text.Network.DescriptionOn">
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:shadowColor">#DDFFFFFF</item>
		<item name="android:shadowRadius">1.0</item>
		<item name="android:shadowDx">0.0</item>
		<item name="android:shadowDy">1.0</item>
	</style>

	<style name="Text.Network.TitleOff">
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:textSize">26dp</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="Text.Network.DescriptionOff">
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:textSize">14dp</item>
		<item name="android:textColor">@color/grey</item>
	</style>

	<style name="Timeline">
		<!-- empty parent -->
	</style>

	<style name="Timeline.Card">
		<!-- empty parent -->
	</style>

	<style name="Timeline.Card.Title">
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:textSize">32dp</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:shadowColor">#AAFFFFFF</item>
		<item name="android:shadowRadius">2.0</item>
		<item name="android:shadowDx">0.0</item>
		<item name="android:shadowDy">1.0</item>
	</style>

	<style name="Timeline.Card.Description">
		<item name="android:textSize">18dp</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:shadowColor">#DDFFFFFF</item>
		<item name="android:shadowRadius">1.0</item>
		<item name="android:shadowDx">0.0</item>
		<item name="android:shadowDy">1.0</item>
	</style>

	<style name="Timeline.Card.Description.Lesser">
		<item name="android:textSize">16dp</item>
		<item name="android:textColor">@color/grey</item>
		<item name="android:shadowColor">#88FFFFFF</item>
	</style>

	<style name="Timeline.Card.Description.Lesser.Emphasis">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:shadowColor">#DDFFFFFF</item>
	</style>

	<style name="Timeline.Card.Client">
		<item name="android:textSize">16dp</item>
		<item name="android:textColor">@color/grey</item>
		<item name="android:shadowColor">#88FFFFFF</item>
		<item name="android:shadowRadius">1.0</item>
		<item name="android:shadowDx">0.0</item>
		<item name="android:shadowDy">1.0</item>
	</style>

	<style name="Timeline.Plain">
		<!-- empty parent -->
	</style>

	<style name="Timeline.Plain.Title">
		<item name="android:ellipsize">marquee</item>
		<item name="android:textSize">26dp</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="Timeline.Plain.Description">
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:textSize">12dp</item>
		<item name="android:textColor">@color/grey</item>
	</style>
</resources>