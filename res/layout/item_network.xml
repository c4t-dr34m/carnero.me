<?xml version="1.0" encoding="utf-8"?>
<carnero.me.view.AnimateRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/btn_button">

	<ImageView android:id="@id/network_icon"
		style="@style/Icon.Network"
		android:contentDescription="@string/network_foursquare"
		android:src="@drawable/ic_foursquare" />

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/network_icon"
		android:layout_centerVertical="true"
		android:orientation="vertical">

		<carnero.me.view.TextViewCondensed android:id="@id/network_title"
			style="@style/Text.Network.Title"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />

		<TextView android:id="@id/network_description"
			style="@style/Text.Network.Description"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
	</LinearLayout>
</carnero.me.view.AnimateRelativeLayout>