<?xml version="1.0" encoding="utf-8"?>
<carnero.me.view.TransparentScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:padding="8dp"
	android:background="@drawable/bcg_side"
	android:fillViewport="true">

	<FrameLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<View android:id="@+id/rails"
			android:layout_width="5dp"
			android:layout_height="fill_parent"
			android:layout_marginLeft="60dp"
			android:background="@drawable/bcg_rails" />

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- rb (Mobilni eKonto) -->
			<RelativeLayout android:id="@+id/rb"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="8dp">

				<View android:id="@+id/rb_event"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:layout_marginTop="16dp"
					android:layout_marginLeft="52.5dp"
					android:background="@drawable/ic_event" />

				<View android:id="@+id/rb_event_line"
					android:layout_width="fill_parent"
					android:layout_height="2dp"
					android:layout_marginTop="25dp"
					android:layout_marginRight="20dp"
					android:layout_alignRight="@id/rb_event"
					android:background="@color/timeline_event_line" />

				<TextView android:id="@+id/rb_year"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginRight="24dp"
					android:layout_marginLeft="4dp"
					android:layout_alignRight="@id/rb_event"
					android:layout_below="@id/rb_event_line"
					android:gravity="center"
					android:text="2012"
					android:textSize="14dp" />

				<TextView android:id="@+id/rb_month"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginRight="24dp"
					android:layout_marginBottom="2dp"
					android:layout_marginLeft="4dp"
					android:layout_alignRight="@id/rb_event"
					android:layout_above="@id/rb_year"
					android:gravity="center"
					android:text="10"
					android:textSize="14dp" />

				<carnero.me.view.AnimateCardLayout android:id="@+id/rb_detail"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="8dp"
					android:layout_marginLeft="74dp"
					android:orientation="vertical"
					android:background="@drawable/bcg_detail">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<TextView android:id="@+id/rb_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_margin="8dp"
							android:text="eKonto"
							android:textSize="22dp"
							android:textStyle="bold"
							android:textColor="@android:color/black" />

						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="12dp"
							android:orientation="horizontal">

							<View
								android:layout_width="8dp"
								android:layout_height="8dp"
								android:padding="4dp"
								android:background="@drawable/ic_star" />

							<View
								android:layout_width="8dp"
								android:layout_height="8dp"
								android:padding="4dp"
								android:background="@drawable/ic_star" />

							<View
								android:layout_width="8dp"
								android:layout_height="8dp"
								android:padding="4dp"
								android:background="@drawable/ic_star" />

							<View
								android:layout_width="8dp"
								android:layout_height="8dp"
								android:padding="4dp"
								android:background="@drawable/ic_star" />

							<View
								android:layout_width="8dp"
								android:layout_height="8dp"
								android:padding="4dp"
								android:background="@drawable/ic_star" />
						</LinearLayout>
					</LinearLayout>

					<TextView android:id="@+id/rb_description"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="8dp"
						android:layout_marginLeft="8dp"
						android:text="Full-featured mobile banking"
						android:textSize="14sp" />

					<TextView android:id="@+id/rb_client"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="8dp"
						android:layout_marginLeft="8dp"
						android:text="Raiffeisenbank, a.s."
						android:textSize="14sp" />

					<View
						android:layout_width="fill_parent"
						android:layout_height="120dp"
						android:layout_marginTop="8dp"
						android:layout_marginBottom="4dp"
						android:background="@drawable/scr_rb_aligned" />

				</carnero.me.view.AnimateCardLayout>
			</RelativeLayout>
		</LinearLayout>
	</FrameLayout>
</carnero.me.view.TransparentScrollView>