<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingTop="8dp"
	android:paddingBottom="8dp">

	<View android:id="@id/event"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_marginTop="16dp"
		android:layout_marginLeft="52.5dp"
		android:background="@drawable/ic_event" />

	<TextView android:id="@id/year"
		style="@style/Timeline.Event.Date.Year"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:layout_marginRight="26dp"
		android:layout_alignRight="@id/event"
		android:gravity="right" />

	<TextView android:id="@id/month"
		style="@style/Timeline.Event.Date.Month"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginRight="26dp"
		android:layout_marginLeft="4dp"
		android:layout_alignRight="@id/event"
		android:layout_below="@id/year"
		android:singleLine="true"
		android:gravity="right" />

	<carnero.me.view.AnimateCardLayout android:id="@id/detail"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginLeft="74dp"
		android:orientation="vertical"
		android:background="@drawable/bcg_detail">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView android:id="@id/title"
				style="@style/Timeline.Event.Title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="8dp" />

			<LinearLayout android:id="@id/stars"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="12dp"
				android:orientation="horizontal" />
		</LinearLayout>

		<TextView android:id="@id/description"
			style="@style/Timeline.Event.Description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="8dp"
			android:layout_marginLeft="8dp" />

		<TextView android:id="@id/client"
			style="@style/Timeline.Event.Client"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="8dp"
			android:layout_marginLeft="8dp" />

		<ImageView android:id="@id/screenshot"
			android:layout_width="fill_parent"
			android:layout_height="120dp"
			android:layout_marginTop="8dp"
			android:layout_marginBottom="4dp"
			android:adjustViewBounds="true"
			android:scaleType="centerCrop"
			android:contentDescription="@string/desc_screenshot" />

	</carnero.me.view.AnimateCardLayout>
</RelativeLayout>