<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="8dp">

	<carnero.me.view.AnimateLinearLayout android:id="@id/detail"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<carnero.me.view.TextViewCondensed android:id="@id/title"
			style="@style/Timeline.Event.Title"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/bcg_detail_top" />

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:background="@drawable/bcg_detail_bottom">

			<TextView android:id="@id/experience"
				style="@style/Timeline.Event.Description"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<TextView android:id="@id/downloads"
				style="@style/Timeline.Event.Description"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<TextView android:id="@id/description"
				style="@style/Timeline.Event.Description"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<TextView android:id="@id/client"
				style="@style/Timeline.Event.Client"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>
	</carnero.me.view.AnimateLinearLayout>
</RelativeLayout>