<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingTop="8dp"
	android:paddingBottom="8dp"
	android:paddingLeft="8dp">

	<View android:id="@id/event"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_marginTop="16dp"
		android:layout_marginLeft="54dp"
		android:background="@drawable/ic_event" />

	<TextView android:id="@id/year"
		style="@style/Timeline.Event.Date.Year"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="21dp"
		android:layout_marginRight="40dp"
		android:layout_alignRight="@id/event"
		android:gravity="right" />

	<TextView android:id="@id/month"
		style="@style/Timeline.Event.Date.Month"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginRight="40dp"
		android:layout_alignRight="@id/event"
		android:layout_below="@id/year"
		android:singleLine="true"
		android:gravity="right" />

	<carnero.me.view.AnimateCardLayout android:id="@id/detail"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginLeft="86dp"
		android:padding="8dp"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView android:id="@id/title"
				style="@style/Timeline.Event.Title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_toRightOf="@id/icon" />

			<ImageView android:id="@id/icon"
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:layout_marginLeft="8dp"
				android:layout_marginBottom="6dp"
				android:layout_gravity="bottom"
				android:contentDescription="@string/desc_icon" />
		</LinearLayout>

		<LinearLayout android:id="@id/stars"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			android:orientation="horizontal" />

		<TextView android:id="@id/description"
			style="@style/Timeline.Event.Description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<TextView android:id="@id/client"
			style="@style/Timeline.Event.Client"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

	</carnero.me.view.AnimateCardLayout>
</RelativeLayout>